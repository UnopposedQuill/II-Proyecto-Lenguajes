<?xml version="1.0" encoding="utf-8"?>
<!-- Esto se supone que es la representación de una Receta como View, esto se le entrega al
 ViewHolder que lo dibujará en la pantalla , es una parte esencial del RecyclerView -->

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_receta"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="114dp"
        android:layout_height="41dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/place_holder" />

</android.support.constraint.ConstraintLayout>